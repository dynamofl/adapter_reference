# Required: Your OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# API Configuration
# Authentication is disabled by default
# ENABLE_AUTH=true
PORT=8000

# Optional: Set a specific API key for authentication (only used when ENABLE_AUTH=true)
# If not set, a random key will be generated on startup
# API_KEY_SECRET=your_api_key_here

# Optional: Set a custom base URL for OpenAI API
# OPENAI_BASE_URL=https://api.openai.com/v1

# Optional: Configure allowed models (comma-separated list)
# If not set, all models are allowed
# ALLOWED_MODELS=gpt-3.5-turbo,gpt-4

# Optional: For Custom Client Implementation Example
# ENTERPRISE_ID=your-enterprise-id
# ENTERPRISE_AUTH_TOKEN=your-enterprise-auth-token