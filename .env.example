# Required: Your OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# API Configuration
ENABLE_AUTH=false
PORT=8000

# Optional: Set a specific API key for authentication (used when ENABLE_AUTH=true)
# If not set, a random key will be generated on startup
API_KEY_SECRET=your_api_key_here

# Optional: Set a custom base URL for OpenAI API
# OPENAI_BASE_URL=https://api.openai.com/v1

# Optional: Configure allowed models (comma-separated list)
# If not set, all models are allowed
# ALLOWED_MODELS=gpt-3.5-turbo,gpt-4

# For Anthropic Adapter (examples/anthropic_adapter.py)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# For Mistral Adapter (examples/mistral_adapter.py)
# MISTRAL_API_KEY=your_mistral_api_key_here